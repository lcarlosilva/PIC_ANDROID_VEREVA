<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrador.helloworld">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.ClientListActivity"
            android:label="@string/app_name"></activity>
        <!-- declaração da activity LoginActivity -->
        <activity
            android:name=".controller.LoginActivity"
            android:label="@string/app_name">
            <!-- o filter quer dizer que essa sempre será a primeira activity a ser chamada -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.ClientPersistenceActivity"
            android:label="@string/app_name"></activity>
    </application>

</manifest>
